@model AMMS.Web.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "PreviousPasswordError";
}


<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request. Previous Password is not valid or Previous password and new password is same.</h2>

<div>
    <p>
        Please @Html.ActionLink("click here to reset password again", "ResetPassword", "Account", routeValues: new { code = "reset", employee = Model.EmployeeId }, htmlAttributes: new { id = "loginLink" })
    </p>
</div>