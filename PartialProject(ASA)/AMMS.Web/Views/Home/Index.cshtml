<div class="container">
    <div id="main-container" class="row-asa row-asa-collapse">
        <div class="col-lg-12 col-md-12 col-sm-12 asa-row main-container-margin container-fluid">
            <div class="sidebar-nav col-lg-12 col-md-12 col-sm-12" id="sidebar_select" ng-controller="branchSelectController">
                <div class="mainselection col-sm-6 col-lg-3 col-md-3">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <span data-toggle="tooltip" data-placement="top" title="Select Zone">
                            Division
                        </span>
                    </div>
                    <div class="col-lg-6  col-md-6 col-sm-6 ">
                        <select class="menu-dropdown select-box-branch"
                                id="zone"
                                style="width: 130% !important"
                                ng-disabled="isDisabledAsif"
                                ng-model="branchSelector.selectedZone" name="zone"
                                ng-change="setDistrict(branchSelector.selectedZone, 1);getDistrictObject();"
                                ng-options="zone.ZoneId as zone.ZoneName disable when (allZones.length < 2) for zone in allZones"></select>
                    </div>
                </div>
                <div class="mainselection col-sm-6 col-lg-3 col-md-3">
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <span data-toggle="tooltip" data-placement="top" title="Select District">
                            District
                        </span>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8">
                        <select class="select menu-dropdown select-box-branch"
                                id="district"
                                ng-disabled="isDisabledAsif"
                                ng-model="branchSelector.selectedDistrict" name="district"
                                ng-change="setRegion(branchSelector.selectedDistrict, 1);getDistrictObject();"
                                ng-options="district.DistrictId as district.DistrictName disable when (allDistricts.length < 2) for district in allDistrictsForSelectBox"></select>
                    </div>
                </div>
                <div class="mainselection col-sm-6 col-md-3 col-lg-3">
                    <div class="col-lg-4 col-sm-4 col-md-4 ">
                        <span data-toggle="tooltip" data-placement="top" title="Select Region">
                            Region
                        </span>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8">
                        <select class="select menu-dropdown select-box-branch"
                                id="region"
                                ng-disabled="isDisabledAsif"
                                ng-change="setBranch(branchSelector.selectedRegion, 1)"
                                ng-model="branchSelector.selectedRegion" name="region"
                                ng-options="region.RegionId as region.RegionName disable when (allRegions.length < 2) for region in allRegionsForSelectBox"></select>
                    </div>
                </div>
                <div class="mainselection col-sm-6 col-lg-3 col-md-3">
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <span>
                            Branch
                        </span>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8">
                        <select class="select menu-dropdown select-box-branch"
                                style="width: 168px !important;"
                                id="branch"
                                ng-disabled="isDisabledAsif"
                                ng-change="setProgramOfficer(branchSelector.selectedBranch)"
                                ng-model="branchSelector.selectedBranch" name="branch"
                                ng-options="branch.BranchId as branch.BranchName disable when (allBranches.length < 2) for branch in allBranchesForSelectBox"></select>
                    </div>
                </div>
                <div id="branchloadingImage" class="workingday-loading-div">
                    <h3>Please wait.. while loading data of {{branchSelector.selectedBranchName}}..</h3>
                    <img src="~/Content/Images/loading.gif" class="workingday-loading-icon" />
                </div>
            </div>




            <img src="~/Content/Images/loading.gif" class="loading-icon" id="loadingImage" />
            <div class="tabbable" id="tab">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs nav-pills-asa" role="tablist" id="amms-tabs">
                    <li ng-repeat="tab in tabs" role="presentation" id="tab_{{tab.id}}" style="border-color: black">
                        <a ng-href="#tabContent_{{tab.id}}" aria-controls="{{tab.id}}" role="tab" data-toggle="tab">
                            <span data-toggle="tooltip" data-placement="right" title="{{(tab.tooltipName)}}">
                                {{tab.title}}
                                <i class="fa fa-times icon-cross" aria-hidden="true" ng-click="removeTab(tab)"></i>
                            </span>
                        </a>
                    </li>
                    <!-- Single button -->
                    <li>
                        <div class="btn-group extra-tabs" ng-show="extraTabs.length > 0">
                            <button type="button" class="btn btn-default dropdown-toggle accend-button"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                                    style="border-color: black">
                                <i class="fa fa-sort-desc"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-extra-tab">
                                <li ng-repeat="tab in extraTabs">
                                    <a class="extra-tab-single-content" ng-click="restoreTab(tab)">
                                        {{tab.DisplayName}}
                                        <i class="fa fa-times-circle times-icon-style" aria-hidden="true"
                                           ng-click="removeTabFromExtra(tab)">
                                        </i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li>
                        <div class="btn-group extra-tabs" ng-show="tabs.length > 1">
                            <button type="button" class="btn btn-default dropdown-toggle accend-button"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                                    style="border-color: black"
                                    ng-click="removeAllTab()">
                                <i data-toggle="tooltip" data-placement="right" title="Close all tabs" class="fa fa-times"></i>
                            </button>
                        </div>
                    </li>

                </ul>
            </div>
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="row" ng-if="tabs.length === 0">
                    <div class="col-lg-8 col-md-10 col-sm-12 col-lg-offset-2 col-md-offset-1">
                        <div class="asa-heading" ng-bind-html="'welcome-speech'|translate">
                        </div>
                    </div>
                </div>
                <div ng-repeat="tab in tabs" role="tabpanel" class="tab-pane"
                     style="cursor: pointer" id="tabContent_{{tab.id}}">
                    <div class="tag-container">
                        <p>
                            <strong style="cursor: default; font-size:12px; color:#db4a4a">{{tab.pageTitle}}</strong>
                        </p>
                        <a class="box" ng-repeat="props in tab.properties"
                           ng-click="openPropTab(props,tab)">
                            <div class="text property-float-left">
                                <span class="fa-stack fa-lg fa-fa-center">
                                    <i class="fa fa-square-o fa-stack-2x"></i>
                                    <i class="{{props.IconClass}}" aria-hidden="true"></i>
                                </span>
                                <span data-toggle="tooltip" data-placement="right" title="{{props.ToolTip}}">{{props.DisplayName}}</span>
                            </div>
                        </a>

                        <div ng-if="tab.isProperty"
                             ng-include src="getSecondaryPath() + locationStr +'/Scripts/angular-scripts/Templates/' + tab.FormType + '/' + tab.FormName + '.html'">
                        </div>
                        <div ng-if="tab.isCommand"
                             ng-include src="getSecondaryPath() + locationStr +'/Scripts/angular-scripts/Templates/' + tab.FormType + '/' + tab.FormName + '.html'">
                        </div>
                    </div>
                </div>

