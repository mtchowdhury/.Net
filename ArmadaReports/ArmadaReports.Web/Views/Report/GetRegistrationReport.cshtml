
@using ArmadaReports.Web.Models
@model List<ReportRegistrationModel>

<div class="row row-margin">
    <h3 style="margin-left: 15px;"> Registration Report </h3>
    <div class="row">
        <div class="col-lg-3 col-md-5 col-sm-12">
            <div class="form-inline">
                <input id="userid" type="hidden" value="@ViewData["userid"]"/>
                <label for="entered-by" class="">Application</label>
                <select class="form-control form-control-height" id="application">
                    <option value="">Select Application</option>
                </select>
            </div>
        </div>
        <div class="col-lg-3 col-md-5 col-sm-12">
            <div class="form-group">
                <a class="btn btn-primary" onclick="service.getRegidtrationReport()">Submit</a>
                <a id="registration-excel" style="display: none;" target="_blank" class="btn btn-primary">Create Spreadsheet</a>
            </div>
        </div>
        <div class="col-lg-6 col-md-2 col-sm-12"></div>
    </div>
</div>

<!-- Data table -->
<div style="margin-top: 10px;" class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <table id="details-table" class="table table-bordered">
            <thead>
                <tr>
                    <th>Application Name</th>
                    <th>Create Date</th>
                    <th>Organization</th>
                    <th>Phone Number</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>Zip</th>
                    <th>State</th>
                    <th>NPI</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model)
                {
                    <tr>
                        <td> @data.ApplicationName </td>
                        <td> @data.CreateDate </td>
                        <td> @data.Organization </td>
                        <td> @data.Phone </td>
                        <td> @data.FirstName </td>
                        <td> @data.LastName </td>
                        <td> @data.Address1 </td>
                        <td> @data.City </td>
                        <td> @data.Zip </td>
                        <td> @data.State </td>
                        <td> @data.NPI </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
<!--End of Data table-->

<script>
    $(document).ready(function () {
        $('#send-mail-id').hide();
        service.getExportUrl('nav-home', '/Home/Index');
        //service.getFilterValuesByStrIdWithoutRefresh('[analytics].[GetApplicationNames]', $('#userid').val(), 'application');
        service.getApplications();
        service.getExportUrl('registration-excel', '@ViewData["excelurl"]');

        detailsWrapper.init();
        service.IsExportDenied('@ViewData["application"]', 'registration-excel', '');
        setTimeout(function () {
            $('#application').val('@ViewData["application"]');
        }, 1000);
    });
</script>