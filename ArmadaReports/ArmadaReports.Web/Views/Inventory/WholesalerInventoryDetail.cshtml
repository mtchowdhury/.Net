@using CanvasJSChartPanel

@{
    ViewBag.Title = "Wholesaler Inventory Report Detail";
}

<link href="~/Content/inventory.reports.css" rel="stylesheet" />

@Html.ChartPanelScripts()
<br />
@Html.TablePanel(new TablePanelSettings()
{
    Id = "wholesalerInventoryReportDetail",
    Title = "Wholesaler Inventory Report Detail",
    DataSourceUrl = ViewBag.BaseUrl + "/Inventory/GetWholesalerInventoryReportDetail" + ViewBag.QueryString,
    ShowExportToExcelButton = (bool)ViewBag.IsExportDenied,
    ExportToExcelUrl = ViewBag.BaseUrl + "/Inventory/GetWholesalerInventoryReportDetail" + ViewBag.QueryString + "&excel=true",
    Columns = new List<TableDataColumn>()
    {
        new TableDataColumn()
        {
            Title = "Wholesaler Name"
        },
        new TableDataColumn()
        {
            Title = "Product Name"
        },
        new TableDataColumn()
        {
            Title = "LOT Number"
        },
        new TableDataColumn()
        {
            Title = "Expiration Date"
        },
        new TableDataColumn()
        {
            Title = "On Hand Qty"
        },
        new TableDataColumn()
        {
            Title = "Date Reported"
        },
        new TableDataColumn()
        {
            Title = "NDC"
        }
    }
})