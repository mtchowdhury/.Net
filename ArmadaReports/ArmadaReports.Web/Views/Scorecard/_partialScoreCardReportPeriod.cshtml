                                    @item.Period1

                                    <img title="down" src="~/Content/img/down.png" class="indicator" />
                                </td>
                            }
                            else if (item.Period1Performance == "up")
                            {
                                <td style="padding-top:8px;">
                                    @item.Period1

                                    <img title="up" src="~/Content/img/up.png" class="indicator" />
                                </td>
                            }
                            else if (item.Period1Performance == "dash")
                            {
                                <td style="padding-top:11px;">
                                    @item.Period1

                                    <img title="up" src="~/Content/img/dashes.png" class="dashes" />
                                </td>
                            }
                            else
                            {
                                <td style="padding-top:11px;">
                                    @item.Period1
                                </td>
                            }
                        }
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" style="font-size:14px;text-align:center;color:cornflowerblue;font-family:sans-serif;">No data available in table.</td>
                </tr>
            }
        </table>
    </div>
</div>