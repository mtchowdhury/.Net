                            {
                                <td style="padding-top:8px;">
                                    @item.Period4%

                                    <img title="UP" src="~/Content/img/up.png" class="indicator" />
                                </td>
                            }
                            else if (item.Period4Performance == "dash")
                            {
                                <td style="padding-top:11px;">
                                    @item.Period4%

                                    <img title="UP" src="~/Content/img/dashes.png" class="dashes" />
                                </td>
                            }
                            else
                            {
                                <td style="padding-top:11px;">
                                    @item.Period4%
                                </td>
                            }
                            if (item.Period3Performance == "down")
