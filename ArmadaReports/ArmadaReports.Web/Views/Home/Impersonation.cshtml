@model ArmadaReports.Web.Models.ImpersonateModel
<div class="row row-margin">
    <div class="col-lg-8 col-md-8 col-sm-10 col-xs-12 col-lg-offset-2 col-md-offset-2 col-sm-offset-1">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="panel-title">User Impersonation</h4>
            </div>
            <div class="panel-body panel-body-height">
                @using (Html.BeginForm("Impersonation", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <div style="margin-bottom: 40px;" class="alert alert-info">
                        <h4 style="text-align: center;">Please enter the user name of the User by which you want to impersonate the dashboard. After pressing <strong>Impersonate</strong>, full dashboard will be loaded with the impersonate user accessibility.</h4>
                    </div>
                    <div class="form-group">
                        @Html.ValidationSummary(true)
                        <label for="imp-user-name" class="col-lg-3 col-md-3 col-sm-4 control-label">User Name: </label>
                        <div class="col-lg-6 col-md-6 col-sm-8 col-xs-12">
                            <input type="text" class="form-control" id="imp-user-name" name="UserName" placeholder="impersonate user name">
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6 col-md-6 col-sm-8 col-xs-12 col-lg-offset-3 col-md-offset-3 col-sm-offset-2">
                            <button type="submit" style="width: 90%;" class="btn btn-block btn-primary">Impersonate</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

